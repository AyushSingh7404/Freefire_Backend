# ─── Database ────────────────────────────────────────────────
DATABASE_HOSTNAME=localhost
DATABASE_PORT=5432
DATABASE_NAME=your_databse_name
DATABASE_USERNAME=your_postgres_username
DATABASE_PASSWORD=your_postgres_password

# ─── JWT ─────────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_super_secret_key_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ─── Gmail SMTP ───────────────────────────────────────────────
# Use a Gmail App Password, NOT your real Gmail password.
# Enable 2FA on Gmail → App Passwords → Generate one for "Mail".
MAIL_USERNAME=your_gmail@gmail.com
MAIL_PASSWORD=your_gmail_app_password
MAIL_FROM=your_gmail@gmail.com
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587

# ─── Cloudinary ──────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ─── Razorpay ────────────────────────────────────────────────
# Use test keys from Razorpay dashboard for development.
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret

# ─── App ─────────────────────────────────────────────────────
# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:4200,http://localhost:3000
